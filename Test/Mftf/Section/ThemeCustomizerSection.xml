    <section name="ThemeCustomizerSection">
        <!--inputs-->
        <element name="username" type="input" selector="#username"/>
        <element name="login" type="input" selector="#login"/>
        <element name="topBarColor" type="text" selector="top_bar_color"/>
        <element name="themeSelector" type="select" selector="applied_to"/>

