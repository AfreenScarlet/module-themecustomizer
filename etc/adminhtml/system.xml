          <comment>See userguide for visual reference</comment>
            <frontend_class>colorpicker</frontend_class>
        </field>
        <field id="navdropdownbackgroundcolor" type="text"  translate="label" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
