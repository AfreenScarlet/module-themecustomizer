<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <tab id="wysiwgdesigner" translate="label">
      <label>WYSIWG Designer</label>
    </tab>
    <section id="designsettings" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Design Settings</label>
      <tab>wysiwgdesigner</tab>
      <resource>MagentoEse_ThemeCustomizer::system_config</resource>
      <group id="assets" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Assets</label>
        <field id="logoimage" translate="label comment" sortOrder="1" type="image" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Logo</label>
          <comment>Allowed file types: jpeg, gif, png. Max : 300x90</comment>
          <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
          <base_url type="media" scope_info="1">theme</base_url>
          <upload_dir config="system/filesystem/media" scope_info="1">theme</upload_dir>
        </field>
      </group>
      <group id="themesettings" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Theme Settings</label>

        <field id="topbarcolor" type="text" translate="label" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Top Bar Color</label>
          <comment>See userguide for visual reference</comment>
          <frontend_class>colorpicker</frontend_class>
        </field>
        <field id="primaryfontcolor" type="text"  translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Primary Font Color</label>
          <comment>See userguide for visual reference</comment>
          <frontend_class>colorpicker</frontend_class>
        </field>
        <field id="primarylinkcolor" type="text"  translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Primary Link Color</label>
          <comment>See userguide for visual reference</comment>
          <frontend_class>colorpicker</frontend_class>
        </field>
        <field id="primarylinkhovercolor" type="text"  translate="label" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Primary Link Hover Color</label>
          <comment>See userguide for visual reference</comment>
          <frontend_class>colorpicker</frontend_class>
        </field>
        <field id="navbackgroundcolor" type="text"  translate="label" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Navigation Background Color</label>
          <comment>See userguide for visual reference</comment>
